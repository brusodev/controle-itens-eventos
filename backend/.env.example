# Configuração de Produção - Controle de Itens
# Copie este arquivo para .env e ajuste as configurações

# Flask
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=sua-chave-secreta-muito-longa-e-aleatoria-aqui

# Banco de Dados
DATABASE_PATH=/var/www/controle-itens-eventos/backend/instance/controle_itens.db

# Servidor
HOST=127.0.0.1
PORT=5100

# Domínio
DOMAIN=coex.projdev.site

# Logs
LOG_LEVEL=INFO
LOG_FILE=/var/log/controle-itens/app.log

# Segurança
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Upload
MAX_CONTENT_LENGTH=52428800  # 50MB em bytes

# Backup (opcional)
BACKUP_ENABLED=True
BACKUP_DIR=/var/backups/controle-itens
BACKUP_RETENTION_DAYS=30
